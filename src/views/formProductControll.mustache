<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="form.css">
    <title>Controle de produtos</title>
</head>

<body>
    <main>
        <form class="form1" method="POST" action="/addproduct" id="form_principal">
            <label for="id_produto">
                <span>id: </span>
                <input type="text" id="id_produto" name="id" {{#addProductTrue}} value="{{id}}" {{/addProductTrue}}>
            </label>
            <label for="nome_produto">
                <span>Nome do produto: </span>
                <input type="text" id="nome_produto" name="nome_produto" {{#addProductTrue}} value="{{nome}}" {{/addProductTrue}}>
            </label>
            <label for="descricao_produto">
                <span>Descrição do produto: </span>
                <input type="text" id="descricao_produto" name="descricao_produto">
            </label>

            <label for="cor_produto">
                <span>Cor: </span>
                <input type="text" id="cor_produto" name="cor_produto">
            </label>

            <label for="material_produto">
                <span>Material: </span>
                <input type="text" id="material_produto" name="material_produto">
            </label>
            <label for="estoque_atual">
                <span>Estoque atual: </span>
                <input type="number" id="estoque_atual" name="estoque_atual">
            </label>
            <label for="estoque_atual">
                <span>Minimo de estoque: </span>
                <input type="number" id="min_estoque" name="min_estoque">
            </label>
            <label for="tipo_produto">
                <span>Categoria: </span>
                <select name="tipo_produto" id="tipo_produto">
                    <option value="Camisa">Camisa</option>
                    <option value="Tenis">Tênis</option>
                    <option value="Oculos">Óculos</option>
                    <option value="Bolsa">Bolsa</option>
                    <option value="Toalha">Toalhas</option>
                </select>
            </label>
            <label for="vendas_totais">
                <span>Vendas: </span>
                <input type="number" id="vendas_totais" name="vendas_totais">
            </label>
            <label for="link_img">
                <span>Link da img: </span>
                <input type="text" id="link_img" name="link_img">
            </label>
            <label for="valor_atual">
                <span>Preço do produto: </span>
                <input type="number" id="valor" name="valor">
            </label>
            <label for="valor_antigo">
                <span>Preço antigo: </span>
                <input type="number" id="valor_antigo" name="valor_antigo">
            </label>
            <button type="submit">Registrar</button>
        </form>
        <hr/>
        <section>
            <h1>Produtos cadastrados</h1><hr/>
            <div class="container">
            {{#Produtos}}
            <form class="form2" method="get" action="/areadm/edit">
		<div class="product">
			<img src="{{link}}">
			<p>{{nome}}</p>
			<input name="id" type="text" value="{{id}}">
            <button>Edit</button>
		</div>
         </form>
         {{/Produtos}}
		</div>
        </section>
        
    </main>



    <script>
        $(document).ready(function () {
            // Adiciona um evento de clique em todos os elementos figure
            $('section.banco_produtos figure').on('click', function () {
                // Anima a rolagem da página até o elemento form com o ID form_principal
                $('html, body').animate({
                    scrollTop: $('form#form_principal').offset().top
                }, 1000);
            });
        });
    </script>
</body>

</html>